{
  "name": "global-fit",
  "version": "1.0.0",
  "private": true,
  "packageManager": "bun@1.3.5",
  "description": "Global Fit - Receptionist Dashboard",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
