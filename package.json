  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "turbo": "^2.0.0",
    "@turbo/gen": "^2.0.0",
    "typescript": "^5.9.0",
    "eslint": "^9.0.0"
  },
  "dependencies": {
    "@react-email/components": "^1.0.6",
    "@tanstack/react-query": "^5.90.20",
    "react-email": "^5.2.5",
    "resend": "^6.9.1"
  }
}
